<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag 'normalize', 'lightgallery', 'style', 'media-queries', 'dropzone' %>

    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,400|Rubik:700" rel="stylesheet">
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script> -->
    <!--<script src="/assets/js/jquery-1.8.3.min.js"></script> -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.min.js"></script>

    <% if page_classes.include? "uploader" %>
      <script src="/assets/js/dropzone.js"></script>
      <script src="/assets/js/sortable.js"></script>
      <script src="/assets/js/cookie.js"></script>
      <script src="/assets/js/highlight.pack.js"></script>
      <script src="/assets/js/uploader.js"></script>
    <% else %>
      <script src="/assets/js/unveil.js"></script>
      <script src="/assets/js/jquery.waypoints.js"></script>
      <script src="/assets/js/lightgallery.js"></script>
      <script src="/assets/js/lg-zoom.js"></script>
      <script src="/assets/js/lg-thumbnail.js"></script>
      <script src="/assets/js/lg-fullscreen.js"></script>

      <script src="/assets/js/main.js"></script>
    <% end %>
  </head>
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
