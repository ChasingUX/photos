<% dimensions = '3000x3000' %>
<% image_path = '/images/' %>

<% if defined?(height).nil? %>
  <section class="full_bleed Gallery">
<% else %>
  <section class="full_bleed Gallery" style="height: <%= height %>px">
<% end %>

  <% if defined?(focus).nil? %>
    <% classes = "img_wrap" %>
  <% else %>
    <% classes = "img_wrap " + focus %>
  <% end %>

  <a class="<%= classes %>" href="/images/<%= image_one %>">
    <% imageURL = image_path image_path + image_one, resize_to: dimensions %>
    <%= image_tag "blank.png", :data => { :src => imageURL }  %>
  </a>
</section>

<% if defined?(caption).nil? %>
<% else %>
  <section class="Caption Wrapper"><h4><%= caption %></h4></section>
<% end %>



